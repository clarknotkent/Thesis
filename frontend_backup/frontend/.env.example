# ImmunizeMe Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api

# Application Configuration
VITE_APP_NAME=ImmunizeMe
VITE_APP_VERSION=1.0.0

# Authentication Configuration
VITE_JWT_SECRET=your-super-secret-jwt-key
VITE_TOKEN_EXPIRATION=24h

# Database Configuration (for reference only - actual config in backend)
VITE_DB_NAME=immunizeme_db

# SMS Configuration (for reference only - actual config in backend)
VITE_SMS_PROVIDER=semaphore
VITE_SMS_API_KEY=your-sms-api-key

# Feature Flags
VITE_ENABLE_REGISTRATION=false
VITE_ENABLE_SMS_NOTIFICATIONS=true
VITE_ENABLE_REPORTS=true
VITE_ENABLE_INVENTORY_MANAGEMENT=true

# Development Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# Production Configuration (uncomment for production)
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error
# VITE_API_BASE_URL=https://your-production-api.com/api