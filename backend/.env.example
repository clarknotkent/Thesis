# Server
# Keep this in sync with frontend/vite.config.js proxy target (defaults to 3001)
PORT=3001

# JWT used by the application (not Supabase)
JWT_SECRET=replace_with_strong_secret

# Supabase project URL
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co

# Server-side key: prefer SUPABASE_SERVICE_KEY (service_role)
# DO NOT commit real keys. Copy this file to .env and fill in values.
SUPABASE_SERVICE_KEY=your_service_role_key

# Optional fallback (anon key). Not recommended for server use.
# Only used if SUPABASE_SERVICE_KEY is not set.
SUPABASE_KEY=your_anon_key_optional

# ------------------- QR Settings -------------------
# Secret for signing patient QR URLs (HMAC-SHA256)
APP_QR_SECRET=change_me_dev_qr_secret
# Where the backend is publicly reachable (used to build /qr/p/:id links)
PUBLIC_BASE_URL=http://localhost:3001
# Your frontend origin and the SPA path to patient vaccination records
FRONTEND_BASE_URL=http://localhost:5173
FRONTEND_PATIENT_RECORDS_PATH=/patients/:id/vaccination-records
# Default QR token TTL in seconds (e.g., 180 days = 15552000). Set 0 or empty for no expiry in URL.
APP_QR_DEFAULT_TTL_SECONDS=15552000
